<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wellnet.Views.PatientViews.PatientActivitiesPage">
             <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <ListView x:Name="patientActivities" RowHeight="70" ItemSource="{Binding PatientActivities}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout Orientation="Horizontal" Padding="10">
            <StackLayout x:Name="nameStack" Orientation="Horizontal">
              <Label x:Name="activityItem" FontFamily="HelveticaNeue-Medium" FontAttributes="Bold"
	      FontSize="22" TextColor="Black" Text="{Binding patientActivity}"/>
            </StackLayout>
          </StackLayout>
        </ViewCell>
      </DataTemplate> 
    </ListView.ItemTemplate>
    
    
  </ListView>
</ContentPage>
