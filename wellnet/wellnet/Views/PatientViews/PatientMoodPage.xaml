<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="wellnet.PatientMoodPage"
Title="Patient Mood"
>
<ListView x:Name="patientList" RowHeight="70" ItemsSource="{Binding PtDetails}">
   <ListView.ItemTemplate>
    <DataTemplate> 
     <ViewCell>
     <StackLayout Orientation="Horizontal" Padding="15,20">
<!--Firstname and lastname-->
	      <StackLayout x:Name="nameStack" Orientation="Horizontal">
	      <Label x:Name="firstName" FontFamily="HelveticaNeue-Medium" FontAttributes="Bold"
	      FontSize="22" TextColor="Black" Text="{Binding FirstName}"/>
	      <Label x:Name="lastName" FontFamily="HelveticaNeue-Medium" FontAttributes="Bold"
	      FontSize="22" TextColor="Black" Text="{Binding LastName}"/>
	      <Label x:Name="tempStLable" FontFamily="HelveticaNeue-Medium" 
		      FontSize="22" TextColor="Black" Text=": "/>
	      </StackLayout>

<!--Mood-->
	      <StackLayout x:Name="patientMoodStack" Orientation="Horizontal" HorizontalOptions="EndAndExpand">
		      <Label x:Name="tempStatus" FontFamily="HelveticaNeue-Medium" 
		      FontSize="22" TextColor="Gray" Text="{Binding PtMood}" />
	      </StackLayout>



<!--the Outsidest-->
      </StackLayout>
     </ViewCell>
    </DataTemplate>
   </ListView.ItemTemplate>
  </ListView>
</ContentPage>
